# Database
DATABASE_URL=postgresql://user:password@localhost/saas_mix

# Redis (for task queue)
REDIS_URL=redis://localhost:6379

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=us-east-1

# Cloudflare R2 (binaires HISE Linux pour production Render)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_r2_bucket_name
# Optionnel : préfixe des objets (défaut: vst_linux)
# R2_VST_PREFIX=vst_linux
# Optionnel : dossier local Linux (défaut: /tmp/saas_mix_vst_linux)
# VST_LINUX_DIR=/tmp/saas_mix_vst_linux

# Stripe (billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Optionnel : Price ID annuel (pour essai 3 jours uniquement sur l'annuel)
STRIPE_PRICE_ANNUAL=price_...

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production

# API Settings
API_V1_PREFIX=/api/v1
